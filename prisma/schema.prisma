// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for Dropdowns and KPIs
// Enums removed for SQLite compatibility, handled in app logic

// The physical office property (Asset)
model Property {
  id          String   @id @default(uuid())
  name        String?
  addressFull String
  zipCode     String
  city        String
  zone        String   // Was Enum Zone

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deals       Deal[]
}

// The commercial transaction (Signature)
model Deal {
  id          String          @id @default(uuid())
  
  // Relations
  propertyId  String
  property    Property        @relation(fields: [propertyId], references: [id])

  // Transaction Details
  type        String          // Was Enum TransactionType (LOCATION, VENTE)
  signatureDate DateTime
  
  // Economics
  surfaceM2   Float
  agencyFee   Float

  // Commercial Stats
  source      String          // Was Enum Source
  visitsCount Int             @default(1)

  // Metadata
  notes       String?         // Just String for SQLite
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

// Simple Auth (Future proofing)
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("VIEWER") // ADMIN, VIEWER
  createdAt DateTime @default(now())
}
